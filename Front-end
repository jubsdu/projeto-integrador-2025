<script>


// Rotação automática de depoimentos
const testimonials = document.querySelectorAll('.testimonial');
let index = 0;
setInterval(() => {
    testimonials[index].classList.remove('active');
    index = (index + 1) % testimonials.length;
    testimonials[index].classList.add('active');
}, 4000);
// Alterna modo escuro
document.getElementById('dark-mode-toggle').addEventListener('click', () => {
    document.body.classList.toggle('dark');
});

// ===== ANIMAÇÃO SUAVE DE SAÍDA =====
function fadeOutAndRedirect(url) {
    document.body.style.transition = 'opacity 0.5s ease';
    document.body.style.opacity = '0';
    setTimeout(() => {
        window.location.assign(url); // redireciona com garantia
    }, 500);
}

// ===== REDIRECIONAMENTOS =====

// Botão principal da seção hero
const agendarBtn = document.querySelector('.hero .btn');
if (agendarBtn) {
    agendarBtn.addEventListener('click', (e) => {
        e.preventDefault();
        fadeOutAndRedirect('/page/agendar');
    });
}

// Links do menu de navegação
document.querySelectorAll('nav ul li a').forEach(link => {
    link.addEventListener('click', (e) => {
        const destino = e.target.getAttribute('href');
        if (destino && destino !== '#') {
            e.preventDefault();
            fadeOutAndRedirect(destino);
        }
    });
});
</script>
</body>
