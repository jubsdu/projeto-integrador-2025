<script>
document.addEventListener('DOMContentLoaded', () => {

  /* ================= DARK MODE ================= */
  const btn = document.getElementById('dark-mode-toggle');
  const icon = btn?.querySelector('i');
  const body = document.body;

  // carregamento inicial
  if (localStorage.getItem('modoEscuro') === 'ativado') {
    body.classList.add('dark');
    icon?.classList.replace('fa-moon', 'fa-sun');
  }

  // clique do botão
  btn?.addEventListener('click', () => {
    const ativo = body.classList.toggle('dark');
    localStorage.setItem('modoEscuro', ativo ? 'ativado' : 'desativado');
    icon?.classList.toggle('fa-sun', ativo);
    icon?.classList.toggle('fa-moon', !ativo);
  });

  /* ============== FORM SUBMIT ================ */
  const form = document.getElementById('formAgendamento');
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const dados = {
        nome: document.getElementById('nome').value,
        email: document.getElementById('email').value,
        especialidade: document.getElementById('especialidade').value,
        medico: document.getElementById('medico').value,
        data: document.getElementById('data').value,
        horario: document.getElementById('horario').value,
        mensagem: document.getElementById('mensagem').value
      };

      const resposta = await fetch("/agendamento", {
        method: "POST",
        credentials: 'include',
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(dados)
      });

      if (resposta.ok) {
        alert("Consulta agendada com sucesso!");
        form.reset();
        window.location.href = "/page/consultas";
      } else {
        const json = await resposta.json().catch(()=>null);
        alert("Erro ao agendar: " + (json?.erro || resposta.statusText));
      }
    });
  }
});
</script>

</body>
</html>
